@{
    ViewData["Title"] = "DonateFood";
}

<div class="container mt-5">
    <h2>Donate Food</h2>
    <form method="post" enctype="multipart/form-data" action="/DonateFood">
        <div class="mb-3">
            <label for="foodDetails" class="form-label">Food Details</label>
            <textarea id="foodDetails" name="foodDetails" class="form-control" rows="3" placeholder="E.g., 2 boxes of biryani, 3 slices of pizza" required></textarea>
        </div>
        <div class="mb-3">
            <label for="foodCategory" class="form-label">Food Category</label>
            <select id="foodCategory" name="foodCategory" class="form-select">
                <option value="cooked">Cooked</option>
                <option value="raw">Raw Ingredients</option>
                <option value="packaged">Packaged Items</option>
                <option value="drinks">Drinks</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="foodQuantity" class="form-label">Food Quantity (Optional)</label>
            <input type="text" id="foodQuantity" name="foodQuantity" class="form-control">
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Pickup Location</label>
            <input type="text" id="location" name="location" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="availableUntil" class="form-label">Available Until</label>
            <input type="datetime-local" id="availableUntil" name="availableUntil" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="foodPhoto" class="form-label">Food Photo (Optional)</label>
            <input type="file" id="foodPhoto" name="foodPhoto" class="form-control" accept="image/*">
        </div>
        <div class="mb-3">
            <label for="specialNotes" class="form-label">Special Notes (Optional)</label>
            <textarea id="specialNotes" name="specialNotes" class="form-control" rows="2" placeholder="E.g., Vegetarian, No nuts"></textarea>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" id="anonymous" name="anonymous" class="form-check-input">
            <label for="anonymous" class="form-check-label">Donate Anonymously</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

